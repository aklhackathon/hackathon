files:
    "/var/www/html/server/vendor" :
        mode: "000777"
        owner: ec2-user
        group: ec2-user
container_commands:
    19-composer-update:
        command: "export COMPOSER_HOME=/root && composer.phar self-update -n"
    20-install-composer:
        command: "chmod 777 ./server/vendor && ./server/composer.phar install -d ./server;"
    21-migrate-database:
        command: "php .server/artisan migrate;"
        leader_only: true
option_settings:
      - namespace: aws:elasticbeanstalk:application:environment
        option_name: COMPOSER_HOME
        value: /root

