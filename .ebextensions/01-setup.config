container_commands:
    19-composer-update:
        command: "export COMPOSER_HOME=/root && composer.phar self-update -n"
    20-install-composer:
        command: "/var/www/ondeck/server/composer.phar install -d /var/app/ondeck/server/www && chown ec2-user:ec2-user -R ./server;"
    21-migrate-database:
        command: "chmod 777 /var/www/ondeck/server/storage/framework/services.json; php /var/www/ondeck/server/artisan migrate;"
        leader_only: true
option_settings:
      - namespace: aws:elasticbeanstalk:application:environment
        option_name: COMPOSER_HOME
        value: /root

