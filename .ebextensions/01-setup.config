container_commands:
    20-install-composer:
        command: "./server/composer.phar install -d /var/app/ondeck/www && chown ec2-user:ec2-user -R ./server;"
    21-migrate-database:
        command: "chmod 777 ./server/storage/framework/services.json; php ./server/artisan migrate;"
        leader_only: true
option_settings:
      - namespace: aws:elasticbeanstalk:application:environment
        option_name: COMPOSER_HOME
        value: /root

